<mujoco model="ratchet scene">
  <option gravity="0 0 -9.81"/>
  
  <include file="test.xml" pos="0 0 3"/>

  <statistic center="0.3 0 0.8" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- Define la textura -->
    <texture name="aruco_base" type="2d" file="/Users/jaimerinconarango/VisualCodeProjects/RatchetProject/src/RobotModels/Textures/AruCo_Base_r.png"/>
        
    <!-- Define el material que utiliza la textura -->
    <material name="plane_material" texture="aruco_base" />

  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <camera name="camera_1" pos="0 0 1.5" xyaxes="1 0 0 0 1 0"/>

  <!-- Visualize global/world coordinate axes -->
  <geom type="cylinder" size="0.01 0.5" pos="0 0 0" euler="0 0 0" rgba="0 0 1 0.6"/> <!-- Z axis in red -->
  <geom type="cylinder" size="0.01 0.5" pos="0 0 0" euler="0 1.5708 0" rgba="1 0 0 0.6"/> <!-- X axis in green -->
  <geom type="cylinder" size="0.01 0.5" pos="0 0 0" euler="0 0 1.5708" rgba="0 1 0 0.6"/> <!-- Y axis in green -->


  </worldbody>
</mujoco>

