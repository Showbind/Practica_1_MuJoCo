<mujoco>
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3"
    rgb2=".2 .3 .4" width="500" height="500" mark="edge" markrgb=".2 .3 .4"/>
    <material name="grid" texture="grid"texrepeat="2 2" texuniform="true"
    reflectance="1"/>
  </asset>

  <worldbody>

    <light pos="0 0 1" mode="trackcom"/>
    <geom name="ground" type="plane" pos="0 0 -.5" size="2 2 .1" material="grid" solimp=".99 .99 .01" solref=".001 1"/>

    <body>
      <freejoint/>
      <geom name="red_sphere" type="sphere" size="0.1" pos="0 0 0" rgba="1.5 0.1 0.5 1" solimp=".99 .99 .01"  solref=".001 1" mass="2"/>
    </body>

    <body>
      <freejoint/>
      <geom name="blue_sphere" type="sphere" size="0.05" pos="1 0 0" rgba="1 0 0 1" solimp=".99 .99 .01"  solref=".001 1" mass="1" />
    </body>

    <camera name="fixed" pos="0 -.6 .3" xyaxes="1 0 0 0 1 2"/>
    <camera name="track" pos="0 -.6 .3" xyaxes="1 0 0 0 1 2" mode="track"/>

  </worldbody>
  <option gravity="0 0 -9.81" />
</mujoco>
