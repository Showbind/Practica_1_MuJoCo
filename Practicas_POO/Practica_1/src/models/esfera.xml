<mujoco>
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3"
    rgb2=".2 .3 .4" width="500" height="500" mark="edge" markrgb=".2 .3 .4"/>
    <material name="grid" texture="grid"texrepeat="2 2" texuniform="true"
    reflectance="1"/>
  </asset>

  <worldbody>

    <light pos="0 0 1" mode="trackcom"/>
    <geom name="ground" type="plane" pos="0 0 -.5" size="2 2 .1" material="grid" solimp=".99 .99 .99" solref=".001 1" friction="0.9 0.9 0.9"/>

    <body> <!-- RAMPA  aqua -->
      <geom name="rampa_1" type="box" size="0.5 0.15 0.01" pos="-1 0.5 -0.3" rgba="0.79 2.1 1.7 0.8" euler = "0 15 0" solimp=".99 .99 .01"  solref=".001 2" mass="2" friction="0.9 0.9 0.9"/>
    </body>
          
    <body> <!-- RAMPA rosa -->
      <geom name="rampa_2" type="box" size="0.5 0.15 0.01" pos="1 0.5 -0.3" rgba="1.5 0.1 0.5 1" euler = "0 -25 0" solimp=".99 .99 .01"  solref=".001 2" mass="2" friction="0.9 0.9 0.9"/>
    </body>

    <body> <!-- ESFERA ROJA -->
      <freejoint/>
      <geom name="red_sphere" type="sphere" size="0.1" pos="-1 0.5 0.4" rgba="1.5 0.1 0.5 1" solimp=".99 .99 .01"  solref=".001 2" mass="2" friction="0.1 0.1 0.1"/>
    </body>

    <body> <!-- ESFERA AZUL -->
      <freejoint/>
      <geom name="blue_sphere" type="sphere" size="0.05" pos="1 0.5 0.4" rgba="1 0 0 1" solimp=".99 .99 .01"  solref=".001 2" mass="1" friction="0.1 0.1 0.1"/>
    </body>

    <camera name="fixed" pos="0 -.6 .3" xyaxes="1 0 0 0 1 2"/>
    <camera name="track" pos="0 -.6 .3" xyaxes="1 0 0 0 1 2" mode="track"/>

  </worldbody>
  <option gravity="0 0 -9.81" /> 
</mujoco>
